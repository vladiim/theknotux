<% nav.fetch(:nav_items).each do |nav_item| %>
  <li class="dropdown">

    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= nav_item.fetch(:title) %><b class="caret"></b></a>

    <ul class="dropdown-menu nav-menu-dropdown">
      <li>
        <div class="yamm-content inspiration">
          <div class="row">
            <% nav_item.fetch(:categories).each do |cat| %>

              <ul class="col-md-3 list-unstyled">
                <li><p><strong><%= cat.fetch(:title) %></strong></p></li>

                <% cat.fetch(:items).each do |content| %>
                  <li><a href="/<%= nav_item.fetch(:title).downcase %>/<%= content.to_url %>"><%= content %></a></li>
                <% end %>

              </ul>
            <% end %>
          </div>
        </div>
      </li>
    </ul>
  </li>
<% end %>

