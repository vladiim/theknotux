<%= erb :nav, locals: locals %>

<section id='main' class='container row'>
  <ol class="breadcrumb">
    <li><a href="/home">Home</a></li>
    <li><a href="/inspiration">Inspiration</a></li>
    <li class="active"><%= title %></li>
  </ol>

  <h2><%= title.to_un_url %> inspiration</h2>

  <div class='col-xs-12'>
    <%= erb :title_content_slideshow, locals: locals %>

    <section class='row'>
      <%= erb :ordering_filter, locals: locals %>

      <section>
        <% 9.times do %>
          <%= erb :content_card, locals: { content: card_content } %>
        <% end %>
      </section>
    </section>

    <section class='row'>
      <h3>< MORE CONTENT GETS LOADED AS USER SCROLLS DOWN ></h3>
      <div class="progress progress-striped active fat-progress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
          <span class="sr-only">Loads more content</span>
        </div>
      </div>
    </section>
  </div>
</section>

<%= erb :footer %>