<%= erb :advertisers_key_nav, locals: locals %>

<section id='main-advertiser' class='container'>

  <ol class="breadcrumb">
    <li><a href="/advertisers">Home</a></li>
    <li><a href="/advertisers/listings">Listings</a></li>
    <li class="active">New listing</li>
  </ol>

    <p class="alert alert-success">
    Welcome the The Knot! Start growing your wedding business leads by creating a listing below.
    </p>

  <div class='row'>
    <h2>New listing</h2>

    <div class="panel panel-default">
      <div class="panel-heading">
        Business details
      </div>

      <div class="panel-body col-xs-12">

        <div class="col-xs-6">
          <form role="form">
            <div class="col-xs-6">
              <label for="exampleInputEmail1">Name</label>
              <input type="email" class="form-control" placeholder="Business name">
              <hr>
            </div>

            <div class="col-xs-6">
              <label for="exampleInputEmail1">Category</label>
              <div class="input-group">
                <div class="input-group-btn">
                  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Choose category
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <li><a href="#">Dresses</a></li>
                    <li><a href="#">Venue</a></li>
                    <li><a href="#">Fishing</a></li>
                  </ul>
                </div>
              </div>
              <hr>
            </div>

            <div class="col-xs-12">
              <label for="exampleInputEmail1">Contact name</label>
              <input type="email" class="form-control" value="John Smith">
              <hr>
            </div>

            <div class="col-xs-6">
              <label for="exampleInputEmail1">Email</label>
              <input type="email" class="form-control" value="vlad@mybusiness.com">
              <hr>
            </div>

            <div class="col-xs-6">
              <label for="exampleInputEmail1">Phone #</label>
              <input type="email" class="form-control" value="04999999">
              <hr>
            </div>
          </form>
        </div>

        <div class="col-xs-6">
          <form role="form">
            <div class="col-xs-6">
              <label for="exampleInputEmail1">Street</label>
              <input type="email" class="form-control" placeholder="# and street">
              <hr>
            </div>

            <div class="col-xs-6">
              <label for="exampleInputEmail1">Suburb</label>
              <input type="email" class="form-control" placeholder="Suburb">
              <hr>
            </div>

            <div class="col-xs-12">
              <label for="exampleInputEmail1">State</label>
              <div class="input-group">
                <div class="input-group-btn">
                  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" style="width:100%">Select state
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <li><a href="#">NSW</a></li>
                    <li><a href="#">VIC</a></li>
                    <li><a href="#">WA</a></li>
                    <li><a href="#">Etc</a></li>
                  </ul>
                </div>
              </div>
              <hr>
            </div>

            <div class="col-xs-6">
              <label for="exampleInputEmail1">Postcode</label>
              <input type="email" class="form-control" placeholder="Postcode">
              <hr>
            </div>

            <div class="col-xs-6">
              <label for="exampleInputEmail1">Country</label>
              <div class="input-group">
                <div class="input-group-btn">
                  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Select country
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <li><a href="#">Australia</a></li>
                    <li><a href="#">New Zealand</a></li>
                    <li><a href="#">Etc</a></li>
                  </ul>
                </div>
              </div>
              <hr>
            </div>
          </form>
        </div>
      </div>
      <div class="panel-full-button">
        <a href="#" class="btn btn-success btn-full-width"><span class="glyphicon glyphicon-question-sign"></span> Add listing</a>
      </div>
    </div>
  </div>
</section>

<%= erb :footer %>